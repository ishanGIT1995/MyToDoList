<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mytodolist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyToDoList">
        <activity android:name=".Other"></activity>
        <activity android:name=".Work" />
        <activity android:name=".Grocery" />
        <activity android:name=".Financial" />
        <activity android:name=".Entertainment" />
        <activity android:name=".Studies" />
        <activity android:name=".Categories" />
        <activity android:name=".Login" />
        <activity android:name=".Register" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>